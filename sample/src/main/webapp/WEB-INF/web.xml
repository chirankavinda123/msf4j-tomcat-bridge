<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Web Application to Demonstrate MSF4J - Servlet Bridge </display-name>

  <servlet>
    <servlet-name>msf4j</servlet-name>
    <servlet-class>com.wso2.carbon.identity.msf4j.bridge.servlet.Msf4jBridgeServlet</servlet-class>
    <async-supported>true</async-supported>
    <init-param>
      <param-name>ServiceClasses</param-name>
      <!-- Comma sepereted service classes -->
      <param-value>com.wso2.carbon.identity.msf4j.bridge.sample.HelloService</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>msf4j</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
</web-app>
